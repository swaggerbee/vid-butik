@using VBRepo
@model Vare_info
@{
    ViewBag.Title = "AdmButikkenEdit";
    Layout = "~/Views/Shared/Adm_Layout.cshtml";
}

<section class="container admButikEdit">
    <h2>Edit @Model.Navn</h2>

    <form name="myForm" action="/Admin/AdmButikkenEditResult/" enctype="multipart/form-data" method="post">
        <table>
            <tr>
                <td>Billede:</td>
                <td><input type="file" id="img" name="img" value="@Model.IMG" /></td>
            </tr>
            <tr>
                <td>Produkt Navn:</td>
                <td>
                    <input type="text" id="navn" name="navn" value="@Model.Navn" />
                </td>
            </tr>
            <tr>
                <td>Produkt tekst:</td>
                <td>
                    <textarea id="text" name="tekst">@Model.Tekst</textarea>
                </td>
            </tr>
            <tr>
                <td>Pris</td>
                <td><input type="text" id="pris" name="pris" value="@Model.Pris" /></td>
            </tr>
        </table>

        <input onclick="Validate()" type="submit" value="Gem" />


        <input type="hidden" id="ID" name="ID" value="@Model.ID" />
    </form>
    <a href="/Admin/AdmButikken">Gå tilbage</a>
</section>